  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build",
    "target": "es2015",
    "lib": ["es2015"]
  },
  "include": [
    "./src/**/*",
    "./bin"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
